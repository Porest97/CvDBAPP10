@model IEnumerable<RefMaster.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MatchDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArenaId
           )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team1Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team2Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefereeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MatchDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArenaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team1Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefereeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Series.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
